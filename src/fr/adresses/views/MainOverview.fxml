<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.adresses.views.MainOverviewController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0">
         <left>
            <TableView fx:id="personTable" prefHeight="515.0" prefWidth="260.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="firstNameColumn" prefWidth="104.0" text="Firstname" />
                <TableColumn fx:id="lastNameColumn" prefWidth="95.0" text="Lastname" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </left>
         <right>
            <TableView fx:id="selectedAlcoolTable" prefHeight="515.0" prefWidth="250.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="selectedAlcoolColumn" prefWidth="100.0" text="Alcool you drink" />
                <TableColumn fx:id="quantityColumn" prefWidth="99.0" text="Quantity" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </right>
         <bottom>
            <VBox prefHeight="85.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Have you eaten?" translateX="5.0" translateY="10.0" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <CheckBox mnemonicParsing="false" text="Yes" translateX="10.0" translateY="15.0" />
                        <CheckBox layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="No" translateX="65.0" translateY="15.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="100.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleGraphic" text="Gaphic" translateX="250.0" translateY="5.0" />
                        <Button mnemonicParsing="false" onAction="#handleAdd" text="Add" translateX="300.0" translateY="5.0" />
                        <Button mnemonicParsing="false" onAction="#handleNew" text="New" translateX="375.0" translateY="5.0" />
                        <Button mnemonicParsing="false" onAction="#handleEdit" text="Edit" translateX="375.0" translateY="5.0" />
                        <Button mnemonicParsing="false" text="Delete" translateX="375.0" translateY="5.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </bottom>
         <center>
            <TableView fx:id="alcoolTable" prefHeight="298.0" prefWidth="230.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="alcoolNameColumn" prefWidth="97.0" text="Alcool" />
                <TableColumn fx:id="degreeColumn" prefWidth="102.0" text="Degree" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
